@page
@model RegisterModel

<div class="container">
    <h1>Register</h1>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Create a new account!</h4>
        <hr />
        <div class="form-row">
                <input placeholder="Name" asp-for="Input.Name" class="col form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>

                <input placeholder="Email" asp-for="Input.Email" class="col form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-row">

                <input asp-for="Input.Password" class="form-control col" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <input asp-for="Input.ConfirmPassword" class="form-control col" placeholder="Confirm Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-row">
            <button type="submit" class="btn btn-dark col form-button js-theme-switch">Register</button>
        </div>
    </form>
</div>
